<!DOCTYPE html>
<html>
	<head>
		<title>Forgot My Password-The Cheng Foundation</title>
	</head>
	<body class="small_top">
		<h1 class="imp_text pg_head">Forgot My Password</h1>
		<div class="row">
		  <div class="col-md-6 col-md-offset-3">
		    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
		      <%= f.label :email %>
		      <%= f.email_field :email, class: 'form-control' %>

		      <%= f.submit "Submit", class: "btn btn-primary" %>
		    <% end %>
		  </div>
		</div>
	</body>
</html>